.page-container {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 图片样式 */
.banner-image {
  width: 100%;
  height: 300rpx;
  display: block;
}

/* 列表项样式 */
.cell-group {
  margin: 20rpx;
  padding: 0;
}

.cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #d83f3f;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
}

.left-container {
  display: flex;
  align-items: center;
}

.title-container {
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.description {
  font-size: 24rpx;
  color: #999;
}

.arrow {
  font-size: 28rpx;
  color: #999;
}

/* 图标样式 */
.icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.icon-image {
  width: 40rpx;
  height: 40rpx;
}

/* 红色图标背景 */
.icon-red {
  background-color: #fff1f0;
}

/* 紫色图标背景 */
.icon-purple {
  background-color: #f9f0ff;
}

/* 蓝色图标背景 */
.icon-blue {
  background-color: #e6f7ff;
}

/* 黄色图标背景 */
.icon-yellow {
  background-color: #fff7e6;
}

/* 绿色图标背景 */
.icon-green {
  background-color: #f0fff4;
}

/* 灰色图标背景 */
.icon-gray {
  background-color: #f5f5f5;
}